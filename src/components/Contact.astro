                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="contact-details">
                                <span class="contact-label">Ubicación</span>
                                <span class="contact-value">México</span>
                            </div>
                        </div>
                    </div>

                    <div class="social-icons">
                        <a href="https://www.linkedin.com/in/hector-hernandez-7638a9264/" class="social-icon" aria-label="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="https://github.com/Hector-SWAT" class="social-icon" aria-label="GitHub">
                            <i class="fab fa-github"></i>
