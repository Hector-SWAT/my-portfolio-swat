    /* Optimización para pantallas muy anchas */
    @media (min-width: 1400px) {
        .section-content {
            max-width: 1400px;
        }

        .about-grid {
            gap: 5rem;
        }
    }

    /* Landscape mobile */
    @media (max-width: 768px) and (orientation: landscape) {
        :root {
            --about-padding: 2rem 1rem;
            --card-width: 200px;
            --card-height: 280px;
        }

        .about-grid {
            grid-template-columns: 1fr 0.8fr;
            gap: 2rem;
            align-items: center;
        }

        .section-title {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
        }

        .about-paragraph {
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .stats-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .stat-item {
            padding: 0.6rem 0.3rem;
        }
    }

    /* Mejoras de accesibilidad */
    @media (prefers-reduced-motion: reduce) {
        .card {
            animation: none;
        }

        .card:hover {
            animation: none;
        }

        .stat-item {
            transition: none;
        }

        .stat-item:hover {
            transform: none;
        }
    }

    /* Alto contraste */
    @media (prefers-contrast: high) {
        .section-title {
            background: #ffd700;
            -webkit-background-clip: unset;
            background-clip: unset;
            -webkit-text-fill-color: unset;
            color: #ffd700;
        }

        .highlight-text {
            color: #ffd700;
        }

        .highlight-text::after {
            background: #daa520;
        }

        .stat-item {
            background: rgba(218, 165, 32, 0.2);
            border: 2px solid #daa520;
        }
    }

    /* Optimización para touch devices */
    @media (hover: none) and (pointer: coarse) {
        .card:hover {
            animation-play-state: running;
        }

        .stat-item:hover {
            transform: none;
        }
    }

    /* Asegurar que las imágenes no se salgan */
    @media (max-width: 768px) {
        .about-image {
            width: 100%;
            display: flex;
            justify-content: center;
            padding: 0 1rem;
        }

        .card-container {
            width: 100%;
            max-width: var(--card-width);
            height: var(--card-height);
        }

        .profile-image,
        .yugioh-image {
            object-fit: cover;
            object-position: center;
        }
    }

    /* Stats responsive específicos */
    @media (max-width: 480px) {
        .stats-grid {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            max-width: 250px;
            margin: 1.5rem auto 0;
        }

        .stat-item {
            display: flex;
