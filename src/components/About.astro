    }
</style>

<script is:inline>
    // Función para inicializar las animaciones de scroll del About
    function initAboutAnimations() {
        // Crear Intersection Observer
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("visible");
                    }
                });
            },
            {
                threshold: 0.1,
                rootMargin: "0px 0px -50px 0px",
            },
        );

        // Observar el título
        const title = document.getElementById("about-title");
        if (title) {
            observer.observe(title);
        }

        // Observar párrafos con delay
        const paragraphs = document.querySelectorAll(".about-paragraph");
        paragraphs.forEach((paragraph, index) => {
            setTimeout(() => {
                observer.observe(paragraph);
            }, index * 100);
        });

        // Observar imagen
        const image = document.querySelector(".about-image");
        if (image) {
            observer.observe(image);
        }

        // Observar stats con delay
        const stats = document.querySelectorAll(".stat-item");
        stats.forEach((stat, index) => {
            setTimeout(() => {
                observer.observe(stat);
            }, index * 200);
        });

        // Observar iconos de seguridad con delay
        const icons = document.querySelectorAll(".security-icon");
        icons.forEach((icon, index) => {
            setTimeout(() => {
                observer.observe(icon);
            }, index * 300);
        });

        // Efecto parallax suave en el scroll
        window.addEventListener("scroll", () => {
            const scrolled = window.pageYOffset;
            const parallaxElements = document.querySelectorAll(".card");

            parallaxElements.forEach((element) => {
                const speed = 0.2;
                element.style.transform = `translateY(${scrolled * speed}px) rotateY(${element.style.transform.match(/rotateY\(([^)]+)\)/) ? element.style.transform.match(/rotateY\(([^)]+)\)/)[1] : "0deg"})`;
            });
        });
    }

    // Inicializar cuando el DOM esté listo
    document.addEventListener("DOMContentLoaded", () => {
        initAboutAnimations();
    });

    // También inicializar si el DOM ya está cargado (por si acaso)
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initAboutAnimations);
    } else {
        initAboutAnimations();
    }
</script>
