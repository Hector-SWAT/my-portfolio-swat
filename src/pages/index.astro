<script is:inline>
  (function initHeroParticlesFromIndex(){
    function init() {
      const container = document.querySelector('.particles-container');
      const canvas = document.getElementById('heroParticles');
      if (!container || !canvas) return;

      const ctx = canvas.getContext('2d');
      const DPR_MAX = 2;

      function resize() {
        const dpr = Math.min(window.devicePixelRatio || 1, DPR_MAX);
        const { width, height } = container.getBoundingClientRect();
        canvas.style.width = width + 'px';
        canvas.style.height = height + 'px';
        canvas.width = Math.max(1, Math.floor(width * dpr));
        canvas.height = Math.max(1, Math.floor(height * dpr));
        ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
      }

      resize();
      window.addEventListener('resize', resize, { passive: true });

      const particles = [];
      // Cantidad responsiva según área (limitada para no saturar)
      const baseCount = Math.min(110, Math.max(40, Math.floor((canvas.width * canvas.height) / 28000)));

      for (let i = 0; i < baseCount; i++) {
        particles.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          r: Math.random() * 2 + 1,
          vx: (Math.random() - 0.5) * 0.6,
          vy: (Math.random() - 0.5) * 0.6
        });
      }

      const LINK_DIST = 150; // distancia para conectar líneas

      function frame() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Dibujar partículas + actualizar
        for (let i = 0; i < particles.length; i++) {
          const p = particles[i];

          // Punto
          ctx.beginPath();
          ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
          ctx.fillStyle = 'rgba(218, 165, 32, 0.85)'; // dorado
          ctx.fill();

          // Movimiento y rebote
          p.x += p.vx; p.y += p.vy;
          if (p.x < 0 || p.x > canvas.width) p.vx *= -1;
          if (p.y < 0 || p.y > canvas.height) p.vy *= -1;
        }

        // Conexiones
        for (let a = 0; a < particles.length; a++) {
          for (let b = a + 1; b < particles.length; b++) {
            const dx = particles[a].x - particles[b].x;
            const dy = particles[a].y - particles[b].y;
            const dist = Math.hypot(dx, dy);
            if (dist < LINK_DIST) {
              ctx.globalAlpha = 1 - dist / LINK_DIST;
              ctx.lineWidth = 0.5;
              ctx.strokeStyle = 'rgba(218, 165, 32, 0.8)';
              ctx.beginPath();
              ctx.moveTo(particles[a].x, particles[a].y);
              ctx.lineTo(particles[b].x, particles[b].y);
              ctx.stroke();
              ctx.globalAlpha = 1;
            }
          }
        }

        requestAnimationFrame(frame);
      }

      frame();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init, { once: true });
    } else {
      init();
    }
  })();
