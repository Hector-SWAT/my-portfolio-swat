            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .stats-grid {
            gap: 0.6rem;
            margin-top: 1rem;
        }

        .stat-item {
            padding: 0.8rem 0.4rem;
            border-radius: 8px;
        }

        .stat-number {
            font-size: 1.3rem;
        }

        .stat-label {
            font-size: 0.75rem;
        }

        .card-container {
            margin: 0 auto;
        }
    }

    /* Mobile Small (360px) */
    @media (max-width: 360px) {
        :root {
            --about-padding: 2.5rem 0.5rem;
            --about-title-size: 1.6rem;
            --card-width: 200px;
            --card-height: 280px;
            --stat-font-size: 1.2rem;
        }

        .section-container {
            padding: var(--about-padding);
        }

        .section-content {
            padding: 0 0.5rem;
        }

        .about-paragraph {
            font-size: 0.9rem;
