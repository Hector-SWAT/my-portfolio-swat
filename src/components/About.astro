        .about-paragraph {
            text-align: left;
        }

        .stats-grid {
            gap: 0.8rem;
            margin-top: 1.5rem;
        }

        .stat-item {
            padding: 1rem 0.5rem;
        }

        .stat-label {
            font-size: 0.8rem;
        }
    }

    /* Mobile Medium (480px) */
    @media (max-width: 480px) {
        :root {
            --about-padding: 3rem 0.75rem;
            --about-title-size: 1.8rem;
            --card-width: 240px;
            --card-height: 340px;
            --stat-font-size: 1.3rem;
        }

