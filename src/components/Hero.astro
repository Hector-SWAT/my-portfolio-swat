---
// Contenido del frontmatter (si es necesario)
---

<div id="inicio" class="hero-section">
    <!-- Fondo oscuro y dorado personalizado -->
    <div class="hero-background"></div>

    <!-- Capa de partículas -->
    <div class="particles-container" aria-hidden="true">
        <canvas id="heroParticles"></canvas>
    </div>

    <div class="hero-content">
        <!-- Logo en círculo centrado -->
        <div class="logo-container">
            <img
                src="/images/logo-swat.png"
                alt="Héctor Hernández"
                class="logo-image"
                width="180"
                height="180"
                loading="eager"
            />
        </div>

        <h1 class="hero-title">
            <span id="typing-text"></span>
            <span class="cursor"></span>
        </h1>

        <p class="hero-description">
            Programador y especialista en <span class="highlight-text"
                >ciberseguridad</span
            >.<br />
            Me apasiona crear soluciones seguras y eficientes.
        </p>

        <div class="hero-buttons">
            <a
                href="/CVHectorDelfinoHernandezPerez.pdf"
                download
                class="btn-primary btn-glow"
            >
                Descargar mi CV
            </a>
            <a href="#proyectos" class="btn-secondary btn-glow">
                Ver proyectos
            </a>
            <a href="#contacto" class="btn-tertiary btn-glow-dark-gold">
                Contacto
            </a>
        </div>

        <!-- Indicador de scroll -->
        <div class="scroll-indicator">
            <div class="scroll-arrow"></div>
        </div>
    </div>
</div>

<style is:global>
    /* ESTILOS DEL HERO SECTION */
    .hero-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 6rem 1rem 4rem;
        overflow: hidden;
        width: 100%;
        background: transparent !important;
        box-sizing: border-box;
        font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova",
            "Numbus Sans", Arial, sans-serif;
        color: rgb(229, 229, 229);
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            135deg,
            var(--dark-bg, #0f0f0f) 0%,
            var(--medium-bg, #1a1a1a) 25%,
            #2d1810 50%,
            #1a0f0a 75%,
            var(--dark-bg, #0f0f0f) 100%
        ) !important;
        z-index: -1;
        background-attachment: scroll !important;
    }

    .hero-background::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
                circle at 20% 30%,
                rgba(218, 165, 32, 0.15) 0%,
                transparent 40%
            ),
            radial-gradient(
                circle at 80% 70%,
                rgba(255, 215, 0, 0.1) 0%,
                transparent 40%
            ),
            radial-gradient(
                circle at 60% 40%,
                rgba(184, 134, 11, 0.1) 0%,
                transparent 50%
            );
    }

    /* Particulas hero  */
    #particles-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .hero-content {
        max-width: 1200px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
        position: relative;
        z-index: 1;
    }

    .logo-container {
        width: 180px;
        height: 180px;
        margin: 0 auto 2rem;
    }

    .logo-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--primary-color, #daa520);
        box-shadow: 0 0 30px rgba(218, 165, 32, 0.4);
        transition:
            transform 0.4s ease,
            box-shadow 0.4s ease;
    }

    .logo-image:hover {
        transform: scale(1.05);
        box-shadow: 0 0 40px rgba(218, 165, 32, 0.6);
    }

    .hero-title {
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(
            45deg,
            var(--secondary-color, #ffd700),
            var(--primary-color, #daa520),
            #b8860b
        );
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 1.2;
    }

    .cursor {
        display: inline-block;
        width: 3px;
        height: 1em;
        background: var(--primary-color, #daa520);
        margin-left: 5px;
        animation: blink 1.2s infinite;
    }

    @keyframes blink {
        0%,
        50% {
            opacity: 1;
        }
        51%,
        100% {
            opacity: 0;
        }
    }

    .hero-description {
        font-size: clamp(1.1rem, 3vw, 1.5rem);
        line-height: 1.6;
        color: var(--light-text, #e5e5e5);
        max-width: 800px;
        margin: 0 auto 3rem;
    }

    .highlight-text {
        color: var(--primary-color, #daa520);
        font-weight: 700;
        position: relative;
    }

    .highlight-text::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(
            90deg,
            var(--primary-color, #daa520),
            transparent
        );
    }

    .hero-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1.2rem;
        justify-content: center;
        margin: 0 auto 4rem;
        width: fit-content;
        max-width: 100%;
    }

    .btn-primary,
    .btn-secondary,
    .btn-tertiary {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 180px;
        cursor: pointer;
    }

    /* Botón Descargar CV - Dorado con glow oscuro */
    .btn-primary {
        background: linear-gradient(45deg, #daa520, #ffd700, #daa520);
        color: #222;
        border: 1px solid #daa520;
    }

    /* Botón Descargar CV - Glow inicia primero */
    .btn-glow-dark {
        animation: pulseGlowDark 2s ease-in-out infinite;
        animation-delay: 0.3s; /* Empieza inmediatamente */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    @keyframes pulseGlowGold {
        0%,
        100% {
            box-shadow: 0 0 20px rgba(218, 165, 32, 0.3);
            transform: scale(1);
        }
        50% {
            box-shadow:
                0 0 40px rgba(218, 165, 32, 0.6),
                0 0 60px rgba(218, 165, 32, 0.4);
            transform: scale(1.02);
        }
    }

    /* Botón Ver Proyectos - Borde dorado con glow dorado */
    .btn-secondary {
        border: 3px solid var(--primary-color);
        color: var(--primary-color);
        background: transparent;
    }

    /* Botón Ver Proyectos - Glow inicia después de CV */
    .btn-glow {
        animation: pulseGlowGold 2s ease-in-out infinite;
        animation-delay: 1.3; /* Empieza 1s después */
        box-shadow: 0 0 20px rgba(218, 165, 32, 0.3);
    }
    @keyframes pulseGlowGold {
        0%,
        100% {
            box-shadow: 0 0 20px rgba(218, 165, 32, 0.3);
            transform: scale(1);
        }
        50% {
            box-shadow:
                0 0 40px rgba(218, 165, 32, 0.6),
                0 0 60px rgba(218, 165, 32, 0.4);
            transform: scale(1.02);
        }
    }

    /* Botón Contacto - Oscuro con glow dorado diferente */
    .btn-tertiary {
        background: rgba(30, 30, 30, 0.9);
        border: 2px solid #444;
        color: white;
    }

    /* Botón Contacto - Glow inicia al final */
    .btn-glow-dark-gold {
        animation: pulseGlowDarkGold 2s ease-in-out infinite;
        animation-delay: 2.3s; /* Empieza 2s después */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }

    @keyframes pulseGlowDarkGold {
        0%,
        100% {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            transform: scale(1);
        }
        50% {
            box-shadow:
                0 0 25px rgba(218, 165, 32, 0.6),
                0 0 35px rgba(0, 0, 0, 0.5);
            transform: scale(1.02);
        }
    }

    /* Efectos hover */
    .btn-primary:hover,
    .btn-secondary:hover,
    .btn-tertiary:hover {
        transform: translateY(-3px) scale(1.05) !important;
        animation: none !important;
    }

    .btn-primary:hover {
        background: linear-gradient(45deg, #ffd700, #daa520, #ffd700);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.7) !important;
    }

    .btn-secondary:hover {
        background: var(--primary-color, #daa520);
        color: var(--medium-bg, #1a1a1a);
        box-shadow: 0 8px 30px rgba(218, 165, 32, 0.7) !important;
    }

    .btn-tertiary:hover {
        background: rgba(45, 45, 45, 0.9);
        border-color: var(--primary-color, #daa520) !important;
        box-shadow: 0 8px 25px rgba(218, 165, 32, 0.5) !important;
    }

    /* Scroll indicator */
    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        animation: bounce 2s infinite;
    }

    .scroll-arrow {
        width: 2px;
        height: 40px;
        background: linear-gradient(
            to bottom,
            var(--secondary-color, #ffd700),
            transparent
        );
        border-radius: 4px;
        position: relative;
    }

    .scroll-arrow::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: -6px;
        width: 0;
        height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-top: 8px solid var(--secondary-color, #ffd700);
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0) translateX(-50%);
        }
        40% {
            transform: translateY(-20px) translateX(-50%);
        }
        60% {
            transform: translateY(-10px) translateX(-50%);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-section {
            padding: 5rem 1rem 3rem;
        }

        .logo-container {
            width: 150px;
            height: 150px;
            margin-bottom: 1.5rem;
        }

        .hero-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 300px;
            gap: 1rem;
        }

        .btn-primary,
        .btn-secondary,
        .btn-tertiary {
            width: 100%;
            padding: 0.9rem;
        }
    }
</style>

<!-- SOLO estilos de capas para que no se tape el canvas -->
<style is:global>
  .hero-section { position: relative; }
  .hero-background { z-index: -2 !important; }
  .particles-container { position: absolute; inset: 0; z-index: 0; pointer-events: none; }
  #heroParticles { width: 100%; height: 100%; display: block; }
  .matrix-container { position: absolute; inset: 0; z-index: -3; } /* detrás de todo si lo usas */
  .hero-content { position: relative; z-index: 1; }
</style>

<script is:inline>
  // Tu efecto de typing (lo dejo como lo tenías)
  (function initTypingEffect(){
    const textElement = document.getElementById("typing-text");
    const text = "Hola, soy Héctor Hernández";
    let index = 0;
    if (!textElement) return;
    textElement.textContent = "";
    function typeWriter() {
      if (index < text.length) {
        textElement.textContent += text.charAt(index);
        index++;
        setTimeout(typeWriter, 100);
      } else {
        setTimeout(() => {
          index = 0; textElement.textContent = ""; typeWriter();
        }, 5000);
      }
    }
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", () => setTimeout(typeWriter, 1000));
    } else {
      setTimeout(typeWriter, 1000);
    }
  })();
</script>