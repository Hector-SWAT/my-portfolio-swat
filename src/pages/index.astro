    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 1rem 4rem;
    overflow: hidden;
    width: 100%;
    background: transparent !important;
    box-sizing: border-box;
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Numbus Sans",
      Arial, sans-serif;
    color: rgb(229, 229, 229);
  } */

  .hero-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 100vh;
    width: 100vw; /* Asegura ancho total de pantalla */
    padding: 6rem 1rem 4rem;
    margin: 0; /* Evita márgenes extra */
    box-sizing: border-box;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      var(--dark-bg) 0%,
      var(--medium-bg) 25%,
      #2d1810 50%,
      #1a0f0a 75%,
      var(--dark-bg) 100%
    );
    z-index: -1;
  }

  .hero-background::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
        circle at 20% 30%,
        rgba(218, 165, 32, 0.15) 0%,
        transparent 40%
      ),
      radial-gradient(
        circle at 80% 70%,
        rgba(255, 215, 0, 0.1) 0%,
        transparent 40%
      ),
      radial-gradient(
        circle at 60% 40%,
        rgba(184, 134, 11, 0.1) 0%,
        transparent 50%
      );
  }

  /* .hero-content {
  max-width: 1200px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
  position: relative;
  z-index: 1;
} */

  /* .hero-content {
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    position: relative;
    z-index: 1;
  } */

  /* Contenedor de contenido */
  .hero-content {
    max-width: 1200px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin: 0 auto;
  }

  .logo-container {
    width: var(--hero-logo-size);
    height: var(--hero-logo-size);
    margin: 0 auto 2rem;
  }

  .logo-image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--primary-color);
    box-shadow: 0 0 30px rgba(218, 165, 32, 0.4);
    transition:
      transform 0.4s ease,
      box-shadow 0.4s ease;
  }

  .logo-image:hover {
    transform: scale(1.05);
    box-shadow: 0 0 40px rgba(218, 165, 32, 0.6);
  }

  .hero-title {
    font-size: var(--hero-title-size);
    font-weight: 800;
    margin-bottom: 1.5rem;
    background: linear-gradient(
      45deg,
      var(--secondary-color),
      var(--primary-color),
      #b8860b
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.2;
  }

  .hero-description {
    font-size: var(--hero-desc-size);
    line-height: 1.6;
    color: var(--light-text);
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .highlight-text {
    color: var(--primary-color);
    font-weight: 700;
    position: relative;
  }

  .highlight-text::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--primary-color), transparent);
  }

  /* .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--hero-gap);
    justify-content: center;
    margin-bottom: 4rem;
  } */

  /* .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    justify-content: center;
    margin: 0 auto 4rem;
    width: fit-content;
    max-width: 100%;
  } */

  /* Botones centrados */
  .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    justify-content: center;
    align-items: center;
    margin: 0 auto 4rem;
    width: 100%; /* Para que el flex centrado funcione */
  }

  .btn-primary,
  .btn-secondary,
  .btn-tertiary {
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: var(--hero-btn-width);
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: linear-gradient(
      45deg,
      var(--primary-color),
      var(--secondary-color)
    );
    color: var(--medium-bg);
    box-shadow: 0 6px 20px rgba(218, 165, 32, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(218, 165, 32, 0.5);
    background: linear-gradient(
      45deg,
      var(--secondary-color),
      var(--primary-color)
    );
  }

  .btn-secondary {
    border: 3px solid var(--primary-color) !important;
    color: var(--primary-color);
    background: transparent;
  }

  .btn-secondary:hover {
    background: var(--primary-color);
    color: var(--medium-bg);
    transform: translateY(-3px);
  }

  .btn-tertiary {
    background: rgba(45, 45, 45, 0.8);
    border: 2px solid #666 !important;
    color: var(--light-text);
  }

  .btn-tertiary:hover {
    border-color: var(--primary-color) !important;
    color: var(--primary-color);
    transform: translateY(-3px);
  }

  /* REDES SOCIALES */
  .social-links {
    display: flex;
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .social-icon {
    color: var(--primary-color);
    font-size: 2.2rem;
    transition: all 0.3s ease;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: rgba(26, 26, 26, 0.7);
    border: 2px solid var(--primary-color);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-links a:hover {
    background: rgba(218, 165, 32, 0.2);
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 8px 20px rgba(218, 165, 32, 0.3);
  }

  .social-links a:hover .social-icon {
    color: #ffd700;
  }

  /* INDICADOR DE SCROLL */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }

  .scroll-arrow {
    width: 2px;
    height: 40px;
    background: linear-gradient(to bottom, var(--secondary-color), transparent);
    border-radius: 4px;
    position: relative;
  }

  .scroll-arrow::after {
    content: "";
    position: absolute;
    bottom: -8px;
    left: -6px;
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid var(--secondary-color);
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-20px) translateX(-50%);
    }
    60% {
      transform: translateY(-10px) translateX(-50%);
    }
  }

  /* MEDIA QUERIES RESPONSIVOS */

  /* Tablets */
  @media (max-width: 1024px) {
    :root {
      --hero-logo-size: 160px;
      --hero-btn-width: 160px;
    }

    .hero-content {
      padding: 1.5rem;
    }
  }

  /* Mobile Large (768px) */
  @media (max-width: 768px) {
    :root {
      --hero-padding-top: 4rem;
      --hero-logo-size: 150px;
      --hero-btn-width: 100%;
      --hero-gap: 1rem;
    }

    body {
      background-attachment: scroll; /* Mejor performance en mobile */
    }

    .hero-section {
      padding: var(--hero-padding-top) 1rem 3rem;
      min-height: 100vh;
    }

    .logo-container {
      margin-bottom: 1.5rem;
    }

    .hero-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      gap: var(--hero-gap);
    }

    .btn-primary,
    .btn-secondary,
    .btn-tertiary {
      width: 100%;
      padding: 0.9rem;
      min-width: unset;
    }

    .social-links {
      gap: 1.2rem;
      margin: 1.8rem 0;
    }

    .social-icon {
      font-size: 1.8rem;
    }

    .social-links a {
      width: 50px;
      height: 50px;
    }

    .hero-content {
      padding: 1rem;
    }
  }

  /* Mobile Medium (480px) */
  @media (max-width: 480px) {
    :root {
      --hero-padding-top: 3.5rem;
      --hero-logo-size: 130px;
    }

    .hero-section {
      padding: var(--hero-padding-top) 0.75rem 2.5rem;
    }

    .hero-buttons {
      max-width: 280px;
    }

    .btn-primary,
    .btn-secondary,
    .btn-tertiary {
      padding: 0.8rem;
      font-size: 1rem;
    }

    .social-links a {
      width: 45px;
      height: 45px;
    }

    .social-icon {
      font-size: 1.6rem;
    }

    .scroll-indicator {
      bottom: 1.5rem;
    }
  }

  /* Mobile Small (360px) */
  @media (max-width: 360px) {
    :root {
      --hero-padding-top: 3rem;
      --hero-logo-size: 120px;
    }

    .hero-section {
      padding: var(--hero-padding-top) 0.5rem 2rem;
    }

    .hero-buttons {
      max-width: 260px;
    }

    .btn-primary,
    .btn-secondary,
    .btn-tertiary {
      padding: 0.75rem;
      font-size: 0.95rem;
    }

    .hero-content {
      padding: 0.75rem;
    }
  }

  /* Optimizaciones adicionales para mobile */
  @media (max-width: 768px) {
    /* Prevenir zoom accidental */
    .hero-title {
      -webkit-text-size-adjust: none;
    }

    /* Mejorar touch targets */
    .btn-primary,
    .btn-secondary,
    .btn-tertiary {
      min-height: 44px;
    }

    .social-links a {
      min-height: 44px;
      min-width: 44px;
    }
  }

  /* Landscape mobile */
  @media (max-width: 768px) and (orientation: landscape) {
    .hero-section {
      min-height: 100vh;
      padding: 2rem 1rem 2rem;
    }

    .logo-container {
      margin-bottom: 1rem;
    }

    .hero-title {
      margin-bottom: 1rem;
    }

    .hero-description {
      margin-bottom: 2rem;
    }

    .hero-buttons {
      margin-bottom: 2rem;
    }
  }

  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .logo-image,
    .btn-primary,
    .btn-secondary,
    .btn-tertiary,
    .social-links a {
      transition: none;
    }

    .scroll-indicator {
      animation: none;
    }
  }

  /* Alto contraste */
  @media (prefers-contrast: high) {
    .hero-title {
      background: var(--secondary-color);
      -webkit-background-clip: unset;
      background-clip: unset;
      -webkit-text-fill-color: unset;
      color: var(--secondary-color);
    }
  }

  /* ABOUT SECTION */
  .section-container {
    padding: var(--about-padding);
    background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
    width: 100%;
    overflow: hidden;
  }

  .section-content {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .section-title {
    font-size: var(--about-title-size);
    background: linear-gradient(45deg, #ffd700, #daa520);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: center;
    margin-bottom: 3rem;
    font-weight: 700;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
    width: 100%;
  }

  /* ABOUT TEXT */
  .about-text {
    width: 100%;
  }

  .about-paragraph {
    font-size: var(--about-text-size);
    line-height: 1.7;
    color: rgba(229, 229, 229, 0.9);
    margin-bottom: 1.5rem;
  }

  .highlight-text {
    color: #daa520;
    font-weight: 600;
    position: relative;
  }

  .highlight-text::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #daa520, transparent);
    opacity: 0.7;
  }

  /* STATS GRID */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 2rem;
  }

  .stat-item {
    background: rgba(218, 165, 32, 0.1);
    border: 1px solid rgba(218, 165, 32, 0.2);
    border-radius: 10px;
    padding: 1.2rem;
    text-align: center;
    transition: transform 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .stat-item:hover {
    transform: translateY(-5px);
    background: rgba(218, 165, 32, 0.15);
  }

  .stat-number {
    font-size: var(--stat-font-size);
    font-weight: 700;
    color: #ffd700;
    display: block;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(229, 229, 229, 0.8);
    margin-top: 0.5rem;
  }

  /* ABOUT IMAGE - CARTA RESPONSIVE */
  .about-image {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .card-container {
    perspective: 1000px;
    width: var(--card-width);
    height: var(--card-height);
    margin: 0 auto;
    max-width: 100%;
  }

  .card {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 1.5s ease;
    animation: rotate 10s infinite ease-in-out;
  }

  .card:hover {
    animation-play-state: paused;
  }

  .card-front,
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(218, 165, 32, 0.3);
  }

  .card-back {
    transform: rotateY(180deg);
    background: #000;
  }

  .profile-image,
  .yugioh-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes rotate {
    0%,
    100% {
      transform: rotateY(0deg);
    }
    50% {
      transform: rotateY(180deg);
    }
  }

  /* MEDIA QUERIES RESPONSIVOS PARA ABOUT */

  /* Desktop large */
  @media (min-width: 1200px) {
    .about-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 4rem;
    }
  }

  /* Desktop */
  @media (min-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  /* Tablets */
  @media (max-width: 1024px) and (min-width: 769px) {
    :root {
      --card-width: 350px;
      --card-height: 500px;
      --about-padding: 5rem 1.5rem;
    }
  }

  /* Mobile Large (768px) */
  @media (max-width: 768px) {
    :root {
      --about-padding: 4rem 1rem;
      --about-title-size: 2rem;
      --about-text-size: 1rem;
      --card-width: 280px;
      --card-height: 400px;
      --stat-font-size: 1.5rem;
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .section-container {
      padding: var(--about-padding);
    }

    .section-title {
      margin-bottom: 2rem;
    }

    .about-paragraph {
      text-align: left;
    }

    .stats-grid {
      gap: 0.8rem;
      margin-top: 1.5rem;
    }

    .stat-item {
      padding: 1rem 0.5rem;
    }

    .stat-label {
      font-size: 0.8rem;
    }
  }

  /* Mobile Medium (480px) */
  @media (max-width: 480px) {
    :root {
      --about-padding: 3rem 0.75rem;
      --about-title-size: 1.8rem;
      --card-width: 240px;
      --card-height: 340px;
      --stat-font-size: 1.3rem;
    }

    .section-container {
      padding: var(--about-padding);
    }

    .about-paragraph {
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    .stats-grid {
      gap: 0.6rem;
      margin-top: 1rem;
    }

    .stat-item {
      padding: 0.8rem 0.4rem;
      border-radius: 8px;
    }

    .stat-number {
      font-size: 1.3rem;
    }

    .stat-label {
      font-size: 0.75rem;
    }

    .card-container {
      margin: 0 auto;
    }
  }

  /* Mobile Small (360px) */
  @media (max-width: 360px) {
    :root {
      --about-padding: 2.5rem 0.5rem;
      --about-title-size: 1.6rem;
      --card-width: 200px;
      --card-height: 280px;
      --stat-font-size: 1.2rem;
    }

    .section-container {
      padding: var(--about-padding);
    }

    .section-content {
      padding: 0 0.5rem;
    }

    .about-paragraph {
      font-size: 0.9rem;
      line-height: 1.6;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 0.8rem;
      max-width: 200px;
      margin: 1rem auto 0;
    }

    .stat-item {
      padding: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }

    .stat-number {
      font-size: 1.2rem;
    }

    .stat-label {
      font-size: 0.8rem;
      margin-top: 0;
    }

    .card-front,
    .card-back {
      border-radius: 15px;
    }
  }

  /* Optimización para pantallas muy anchas */
  @media (min-width: 1400px) {
    .section-content {
      max-width: 1400px;
    }

    .about-grid {
      gap: 5rem;
    }
  }

  /* Landscape mobile */
  @media (max-width: 768px) and (orientation: landscape) {
    :root {
      --about-padding: 2rem 1rem;
      --card-width: 200px;
      --card-height: 280px;
    }

    .about-grid {
      grid-template-columns: 1fr 0.8fr;
      gap: 2rem;
      align-items: center;
    }

    .section-title {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }

    .about-paragraph {
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .stat-item {
      padding: 0.6rem 0.3rem;
    }
  }

  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .card {
      animation: none;
    }

    .card:hover {
      animation: none;
    }

    .stat-item {
      transition: none;
    }

    .stat-item:hover {
      transform: none;
    }
  }

  /* Alto contraste */
  @media (prefers-contrast: high) {
    .section-title {
