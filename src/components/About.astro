            grid-template-columns: 1fr;
            gap: 0.8rem;
            max-width: 200px;
            margin: 1rem auto 0;
        }

        .stat-item {
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            text-align: left;
        }

        .stat-number {
            font-size: 1.2rem;
        }

        .stat-label {
            font-size: 0.8rem;
            margin-top: 0;
        }

        .card-front,
        .card-back {
            border-radius: 15px;
